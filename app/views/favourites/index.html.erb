<div class="container mt-2">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h1>My Favourite Spots</h1>
      <div class="spot-bookmark-cards justify-content-between grid-container ">
        <% @favourites.each do |favourite| %>
        <%= link_to spot_path(favourite.spot) do %>
          <div class="spot-favourite-card container grid-container mr-3 mt-3">
            <div class="header align-items-center">
              <h3 class="mb-0 pt-3"><%= favourite.spot.name %><i class="fas fa-sun sun-favourite ml-1"></i></h3>

            </div>
            <div class="d-flex justify-content-evenly justify-content-between mt-3">
              <div class="spot-index-img">
                <%= cl_image_tag favourite.spot.photos.first.key, crop: :fit if favourite.spot.photos.attached? %>
              </div>
              <div class="spot-favourite-infos flex-column justify-content-center h-100 w-100 pb-0 ml-3 mt-4">
                <div class="spot-favourite-details">
                  <p class="d-flex justify-content-center">
                    <%= favourite.spot.time_difference[:hour] %><%= favourite.spot.time_difference[:minutes] %>h of sun
                  <div class="stars d-flex justify-content-center">
                    <% favourite.spot.rating.to_i.times do %>
                      <i class="fas fa-star "></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>

       <div class="favourite-map">
        <div
          id="map"
          style="width: 100%; height: 21vh; border-radius: 8px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>


