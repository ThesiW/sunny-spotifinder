 <body class="show-body" style="background-color: #F5FCFF; color: black;">
  <div class="navbar navbar-expand-sm navbar-light navbar-top mt-3">
    <%= link_to "#", class: "avatar-bordered" do %>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/rappmax", height: '100%' %>
    <% end %>
  </div>
</body>

<div class="container mt-2">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div class="show-name">
        <h1 class="d-flex justify-content-center" style="margin-top: 40px;"> <%= @spot.name %> </h1>
        <p class="d-flex justify-content-center"><%= @spot.time_difference[:hour] %><%= @spot.time_difference[:minutes] %>h of remaining sun</p>
      </div>

      <div class="carousel-card">
        <div id="carouselExampleIndicators" class="carousel-slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <% @spot.photos.each do |photo| %>
            <div class="carousel-item<%= " active" if photo == @spot.photos.first %>">
              <%= cl_image_tag photo.key, class:"d-block w-100", height: "160px" %>
          </div>
            <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

      <div class="show-details-card">
        <div class="bookmark-favourite d-flex justify-content-end pt-2">
          <div class="bookmark-button mr-2 mt-2">
            <% if Bookmark.find_by(spot: @spot, user: current_user)%>
                <%= link_to bookmark_path(Bookmark.find_by(spot: @spot, user: current_user)), :method => :delete do %>
                  <i class="fas fa-bookmark mr-2"></i>
                <% end %>
              <% else %>
              <%= link_to spot_bookmarks_path(@spot), method: :post do %>
                <i class="far fa-bookmark"></i>
              <% end %>
            <% end %>
          </div>
          <div class="favourite-button mr-2 mt-2">
            <% if Favourite.find_by(spot: @spot, user: current_user)%>
              <%= link_to favourite_path(Favourite.find_by(spot: @spot, user: current_user)), :method => :delete do %>
                <i class="far fa-sun"></i>
              <% end %>
            <% else %>
              <%= link_to spot_favourites_path(@spot), method: :post do %>
                <i class="fas fa-sun"></i>
              <% end %>
            <% end %>
          </div>
        </div>
          <div class="stars d-flex justify-content-start ml-3">
            <% @spot.rating.to_i.times do %>
              <i class="fas fa-star "></i>
            <% end %>
          </div>
          <p class="spot-review mt-3" style="font-size: 12px;"><%= @spot.review %></p>
      </div>
          <a class="btn-main-show mb-1 mr-1 d-flex justify-content-between mt-3" href="/visits" style="font-size: 12px;"><i class="fas fa-plus-circle"></i></i>Add to Visits</a>
          <a class="btn-navy-show mb-1 mr-1 d-flex justify-content-between mt-3" href="/" style="font-size: 12px;"><i class="far fa-calendar-alt"></i>Add to Calendar</a>
      </div>
      <div class="show-map">
        <div
          id="map"
          style="width: 100%; height: 22vh; border-radius: 8px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>


      <div class="navbar-bottom">
        <div class="ml-3 mr-3 d-flex justify-content-between">
          <a href="/" class="btn-icon"><i class="fa fa-home"></i></a>
          <a href="/bookmarks" class="btn-icon"><i class="fas fa-bookmark" class="active"></i></a>
          <a href="/favourites" class="btn-icon"><i class="fas fa-sun" class="active"></i></a>
          <a href="/" class="btn-icon"><i class="fas fa-search"></i></a>
        </div>
      </div>

  </div>
</div>

